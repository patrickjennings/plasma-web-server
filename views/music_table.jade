html
    head
        link(rel='stylesheet', href='css/index.css')
        link(rel='shortcut icon' id='icon' href='images/plasma.jpg')
        title Plasma Web Server
    body
        div(id='music_controls')
            div(style='float: right;')
                a(href="javascript:$('.current button').focus();" style='margin-right: 10px;') Currently Playing
                a(href="javascript:get_random_playlist();" style='margin-right: 10px;') Random Playlist
                form(onsubmit='get_songs(); return false;' style='display: inline-block;')
                    input(type='text' id='music_search')
                button(onclick='get_songs();') Search

            a(id='album_art_link' target='_blank' href='https://github.com/patrickjennings/plasma-web-server')
                img(id='album_art' src='images/plasma.jpg')

            b(id='artist') Plasma Web Server
            b(id='album')
            b(id='title')

            audio(id='music_player' controls)
                source(id='music_source' type='audio/mpeg')

        div(id='music_content')
            table(id='music_table')
                thead
                    tr
                        th(width=26) 
                        th Artist
                        th Title
                        th Album
                        th(width=40) Year
                        th(width=75) Track
                tfoot
                    tr
                        td(id='music_footer' colSpan=6) Search
                tbody(id='music_tbody')

        script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        script(type='text/javascript' src='js/index.js')
